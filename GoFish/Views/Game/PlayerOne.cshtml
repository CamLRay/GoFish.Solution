@{
  Layout = "_Layout";
}

<h1>Player One's Hand</h1>
<form action="/PlayerOne/Match" method="post">
@using GoFish.Models;
@for(int i = 0; i < Model.Count; i++)
{
  <input type="radio" id="@i" name="card" value="@i">
  <label for="@i">@Model[@i].Rank @Model[@i].Suit</label><br>
  <!-- <li><a href="playerOne/">@Model[@i].Rank @Model[@i].Suit</a></li> -->
}
<button type="submit">Is it a match?</button>
</form>
